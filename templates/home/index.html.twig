{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
    .container {
        margin: 20px auto;
        max-width: 1200px;
    }
    h1, h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }
    .section {
        margin-bottom: 40px;
    }
    .card {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
        margin-bottom: 20px;
    }
    .card img {
        width: 100%;
        height: auto;
        border-radius: 5px 5px 0 0;
    }
    .card h5 {
        margin-top: 10px;
        font-size: 18px;
        color: #444;
    }
    .card p {
        font-size: 14px;
        color: #555;
    }
    .btn {
        display: inline-block;
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        text-align: center;
    }
    .btn:hover {
        background-color: #0056b3;
    }
    .list-group {
        list-style: none;
        padding: 0;
    }
    .list-group-item {
        padding: 15px;
        border: 1px solid #ddd;
        margin-bottom: 10px;
        border-radius: 5px;
        background: #f9f9f9;
    }
</style>

<div class="container">
    <h1>Bienvenue sur le site des fans du RSC Anderlecht</h1>

    <!-- Section : Derniers articles -->
    <section class="section">
        <h2>Derniers articles</h2>
        <div>
            {% for post in posts %}
                <div class="card">
                    <h5>{{ post.title }}</h5>
                    <p>{{ post.content|slice(0, 100) ~ '...' }}</p>
                    <a>Lire l'article</a>
                    <div>
                        <small>Publié le {{ post.createdAt|date('d/m/Y') }}</small>
                    </div>
                </div>
            {% else %}
                <p>Aucun article publié pour le moment.</p>
            {% endfor %}
        </div>
    </section>

    <!-- Section : Prochains événements -->
    <section class="section">
        <h2>Prochains événements</h2>
        <ul class="list-group">
            {% for event in events %}
                <li class="list-group-item">
                    <strong>{{ event.title }}</strong> - {{ event.date|date('d/m/Y H:i') }}
                    <br>
                    <small>Lieu : {{ event.location }}</small>
                    <p>{{ event.description|slice(0, 100) ~ '...' }}</p>
                </li>
            {% else %}
                <p>Aucun événement à venir pour le moment.</p>
            {% endfor %}
        </ul>
    </section>

    <!-- Section : Derniers produits -->
    <section class="section">
        <h2>Boutique</h2>
        <div>
            {% for product in products %}
                <div class="card">
                    <h5>{{ product.name }}</h5>
                    <p>{{ product.description|slice(0, 100) ~ '...' }}</p>
                    <p><strong>{{ product.price }} €</strong></p>
                    <a href="#" class="btn">Acheter</a>
                </div>
            {% else %}
                <p>Aucun produit disponible pour le moment.</p>
            {% endfor %}
        </div>
    </section>

    <!-- Section : Galeries -->
    <section class="section">
        <h2>Galeries</h2>
        <div>
            {% for gallery in galleries %}
                <div class="card">
                    <img src="{{ gallery.file }}" alt="{{ gallery.title }}">
                    <h5>{{ gallery.title }}</h5>
                    
                    <a href="#" class="btn">Voir la galerie</a>
                </div>
            {% else %}
                <p>Aucune galerie disponible pour le moment.</p>
            {% endfor %}
        </div>
    </section>
</div>
{% endblock %}
